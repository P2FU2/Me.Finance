<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Me.Finance|Settings</title>
    <link rel="stylesheet" type="text/css" href="/css/settings.css">
    <link rel="icon" href="/images/me.ico" type="image/meicon">
</head>

<body>
    <!-- Cabeçalho da página -->
    <header class="flex flex-space-between flex-center bg-black-transparent block-padding">
        <!-- Logotipo -->
        <img src="/images/logo.jpeg" alt="Logo" class="logo">
        <h1 class="color-white">ME. Finance</h1>
        <!-- Barra de navegação -->
        <nav class="navbar">
            <ul class="nav-links flex no-list-style">
                <li class="nav-item"><a href="/" class="nav-link color-white">Home</a></li>
                <!-- Exibir opções baseadas no estado de autenticação do usuário -->
                <% if (!isAuthenticated) { %>
                    <li class="nav-item"><a href="/login" class="nav-link color-white">Login</a></li>
                <% } else { %>
                    <li class="nav-item"><a href="/logout" class="nav-link color-white">Logout</a></li>
                    <li class="nav-item"><a href="/admin" class="nav-link color-white">Admin</a></li>
                <% } %>
                <li class="nav-item"><a href="/economy" class="nav-link color-white">Economy</a></li>
            </ul>
        </nav>
    </header>


    <main class="settings-container">
        <h2 class="center-align font-large color-dark">Settings</h2>
        
        <div class="settings-section">
            <form class="settings-form">
                <!-- Username -->
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username">
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email">
                </div>

                <!-- Password Change -->
                <div class="form-group">
                    <label for="current-password">Current Password:</label>
                    <input type="password" id="current-password" name="current-password">
                </div>
                
                <div class="form-group">
                    <label for="new-password">New Password:</label>
                    <input type="password" id="new-password" name="new-password">
                </div>

                <div class="form-group">
                    <label for="confirm-password">Confirm New Password:</label>
                    <input type="password" id="confirm-password" name="confirm-password">
                </div>

                <!-- Notification Preferences -->
                <div class="form-group">
                    <label>Notification Preferences:</label>
                    <div class="checkbox-group">
                        <input type="checkbox" id="email-notifications" name="notifications" value="email">
                        <label for="email-notifications">Email Notifications</label>
                    </div>
                    <div class="checkbox-group">
                        <input type="checkbox" id="sms-notifications" name="notifications" value="sms">
                        <label for="sms-notifications">SMS Notifications</label>
                    </div>
                </div>

                <!-- Save Changes Button -->
                <div class="form-group">
                    <button type="submit">Save Settings</button>
                </div>
            </form>
        </div>
    </main>

    <!-- Rodapé da página -->
    <footer>
        <div class="contact">
            <h3>Contact Us</h3>
            <p>Email: contact@me.finance.com</p>
            <p>Phone: +1 (123) 456-7890</p>
        </div>
        <div class="social">
            <h3>Follow Us</h3>
            <p>Twitter: @MEFinance</p>
            <p>LinkedIn: ME.Finance</p>
        </div>
    </footer>

</body>

</html>
